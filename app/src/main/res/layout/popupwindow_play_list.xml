<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/playList_bg"
                android:paddingTop="5dp"
                >

    <TextView
        android:id="@+id/play_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="播放列表"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_clear_play_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/play_list_title"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:paddingRight="10dp"
        android:clickable="true"
        android:text="清空"
        android:textColor="@color/gray"
        android:textSize="14sp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/play_list_title"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray"/>




    <Button
        android:id="@+id/close_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:text="@string/close"
        />

    <View
        android:id="@+id/close_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/close_playlist"
        android:background="@color/light_gray"
        />

    <ListView
        android:id="@+id/play_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_above="@id/close_divider"
        android:divider="?android:listDivider"
        />

</RelativeLayout>
